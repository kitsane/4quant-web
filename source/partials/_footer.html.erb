<footer class="navbar navbar-dark bg-inverse">
  <div class="container p-y-2">
    <div class="row">
      <div class="col-md-8 col-xs-12">
        <ul class="nav navbar-nav">
          <%= navigation_list(data.site.main_navigation, li_class: "nav-item", a_class: "nav-link") %>
        </ul>
        <address>
          <%= data.site.company.name %>
          <br/>
          <%= data.site.company.street %>,
          <%= data.site.company.city %>,
          <%= data.site.company.country%>
          <br/>
          <a href="mailto:<%= data.site.company.email%>"><%= data.site.company.email%></a>
          <br/>
          <%= data.site.company.mwst%>
        </address>

      </div>
      <div class="col-md-4 col-xs-8 text-xs-center text-md-right">
        <div class="row">
          <% data.site.social_media.each_with_index do |(icon, path), index| %>
            <div class="col-md-2 col-xs-1 p-x-1 p-b-1">
              <% link_to path, class: "fa fa-#{icon} fa-icon fa-align-center" do %>
                <span class="sr-only"><%= data.site.company.name %> on <%= icon %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</footer>
