      <input id="menu" type="checkbox" aria-label="Menu" hidden>
      <label for="menu">
      </label>
      <div class="navigation-menu">
        <ul>
          <% data.site.main_navigation.each do |label, path| %>
            <li><%= link_to label, "/#{path}" %></li>
          <% end %>
          <% data.site.service_navigation.each do |label, path| %>
            <li><%= link_to label, "/#{path}" %></li>
          <% end %>
        </ul>
