<div class="row m-b-1">
<% data.people.team.each do |member| %>
  <div class="col-xs-4 col-sm-2 p-r-0">
    <%= image_tag "people/#{member.name.split(' ').join('-').downcase}.png", alt: member.name, class: 'img-fluid m-b-1 img-rounded' %>
  </div>
  <div class="col-xs-8 col-sm-4 p-x-0 p-b-1">
    <div class="card-block p-t-0">
      <h4 class="card-title">
        <% if member.doctor %>
          Dr.
        <% end %>
        <%= member.name %>
        <div class="text-muted"><small><%= member.title %></small></div>
      </h4>
      <p class="card-text"><small><%= member.description %></small></p>
    </div>
  </div>
<% end %>
</div>
